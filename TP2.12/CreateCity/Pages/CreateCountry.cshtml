@page "/"
@model CreateCity.Pages.CreateCountryModel
@{
    ViewData["Title"] = "TP2.12 - Validação Customizada com ModelState";
}

<div class="max-w-xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Criar País</h2>

    <form method="post" class="space-y-4">
        <!-- Country Name -->
        <div>
            <label asp-for="Input.CountryName" class="block text-gray-700 font-medium mb-1"></label>
            <input asp-for="Input.CountryName"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Input.CountryName" class="text-red-500 text-sm mt-1 block"></span>
        </div>

        <!-- Country Code -->
        <div>
            <label asp-for="Input.CountryCode" class="block text-gray-700 font-medium mb-1"></label>
            <input asp-for="Input.CountryCode"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Input.CountryCode" class="text-red-500 text-sm mt-1 block"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit"
                class="w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-blue-700 transition-colors">
            Criar País
        </button>
    </form>

    <!-- Lista de países adicionados -->
    @if (CreateCountryModel.Countries.Any())
    {
        <h3 class="text-xl font-semibold mt-8 mb-4 text-gray-700">Países adicionados</h3>
        <table class="min-w-full border border-gray-200 rounded-md">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2 border-b text-left">ID</th>
                    <th class="px-4 py-2 border-b text-left">Nome do País</th>
                    <th class="px-4 py-2 border-b text-left">Código</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in CreateCountryModel.Countries)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-2 border-b">@country.Id</td>
                        <td class="px-4 py-2 border-b">@country.CountryName</td>
                        <td class="px-4 py-2 border-b">@country.CountryCode</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}