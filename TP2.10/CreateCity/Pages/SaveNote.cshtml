@page "/savenote"
@model CreateCity.Pages.SaveNoteModel
@{
    ViewData["Title"] = "Salvar Nota";
}

<div class="max-w-xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Escrever e Salvar Nota</h2>

    <form method="post" class="space-y-4">
        <div>
            <label asp-for="Input.Content" class="block text-gray-700 font-medium mb-1"></label>
            <textarea asp-for="Input.Content" rows="5"
                      class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
            <span asp-validation-for="Input.Content" class="text-red-500 text-sm mt-1 block"></span>
        </div>

        <button type="submit"
                class="w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-blue-700 transition-colors">
            Salvar Nota
        </button>
    </form>

    @if (!string.IsNullOrEmpty(Model.FilePath))
    {
        <div class="mt-6 p-4 bg-green-100 border border-green-300 rounded-md">
            <p class="text-green-800 font-medium mb-2">Nota salva com sucesso!</p>
            <a href="@Model.FilePath" download
               class="text-blue-600 hover:underline font-semibold">
                Clique aqui para baixar o arquivo
            </a>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
