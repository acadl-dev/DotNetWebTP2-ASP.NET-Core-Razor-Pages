@page "/{cityName}"
@model CreateCity.Pages.CityDetailsModel
@{
    ViewData["Title"] = "Detalhes da Cidade";
}

<div class="max-w-xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
    <h2 class="text-2xl font-bold mb-4 text-gray-800">Detalhes da Cidade</h2>

    <p class="text-gray-700 text-lg">
        Você está vendo detalhes de: <span class="font-semibold">@Model.CityName</span>
    </p>
</div>