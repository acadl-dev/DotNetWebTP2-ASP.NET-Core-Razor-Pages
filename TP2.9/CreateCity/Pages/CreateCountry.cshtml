@page "/createcountry"
@model CreateCity.Pages.CreateCountryModel
@{
    ViewData["Title"] = "TP2.7 - Cadastrar Múltiplos Países";
}

<div class="max-w-2xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Cadastrar Múltiplos Países</h2>

    <form method="post" class="space-y-4">
        @for (int i = 0; i < Model.Inputs.Count; i++)
        {
            <div class="grid grid-cols-2 gap-4 items-end">
                <div>
                    <label asp-for="@Model.Inputs[i].CountryName" class="block text-gray-700 font-medium mb-1"></label>
                    <input asp-for="@Model.Inputs[i].CountryName"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="@Model.Inputs[i].CountryName" class="text-red-500 text-sm mt-1 block"></span>
                </div>
                <div>
                    <label asp-for="@Model.Inputs[i].CountryCode" class="block text-gray-700 font-medium mb-1"></label>
                    <input asp-for="@Model.Inputs[i].CountryCode"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="@Model.Inputs[i].CountryCode" class="text-red-500 text-sm mt-1 block"></span>
                </div>
            </div>
        }

        <button type="submit"
                class="w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-blue-700 transition-colors">
            Criar Países
        </button>
    </form>

    <!-- Lista de países adicionados -->
    @if (CreateCountryModel.Countries.Any())
    {
        <h3 class="text-xl font-semibold mt-8 mb-4 text-gray-700">Países adicionados</h3>
        <table class="min-w-full border border-gray-200 rounded-md">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2 border-b text-left">ID</th>
                    <th class="px-4 py-2 border-b text-left">Nome do País</th>
                    <th class="px-4 py-2 border-b text-left">Código</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in CreateCountryModel.Countries)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-2 border-b">@country.Id</td>
                        <td class="px-4 py-2 border-b">@country.CountryName</td>
                        <td class="px-4 py-2 border-b">@country.CountryCode</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}